<body>
  <h1>段考成績分析工具</h1>

  <label>段考總分（總分）</label>
  <input type="number" id="total" />

  <label>有教過的題目分（教學覆蓋分數）</label>
  <input type="number" id="taught" />

  <label>確實學會的題目分（掌握分數）</label>
  <input type="number" id="learned" />

  <label>實得的題目分（實際得分）</label>
  <input type="number" id="scored" />

  <button onclick="calc()">計算</button>

  <div class="result" id="result">
    <p>（輸入數據後將顯示結果）</p>
  </div>

<script>
function calc() {
  const total = Number(document.getElementById('total').value);
  const taught = Number(document.getElementById('taught').value);
  const learned = Number(document.getElementById('learned').value);
  const scored = Number(document.getElementById('scored').value);

  if (!total || !taught || !learned) {
    document.getElementById('result').innerHTML = '請輸入完整數據';
    return;
  }

  const prepRate = taught / total;
  const learnRate = learned / taught;
  const execRate = learned ? scored / learned : 0;

  let notes = "<h3>備註</h3>";
  notes += `<p>準備度 (有教過 / 總分)：${(prepRate * 100).toFixed(1)}%</p>`;
  notes += `<p>學習率 (確實學會 / 有教過)：${(learnRate * 100).toFixed(1)}%</p>`;
  notes += `<p>執行率 (實得 / 確實學會)：${(execRate * 100).toFixed(1)}%</p>`;

  if (learnRate < 0.85) {
    notes += `<p><strong>學習率不佳（小於85%）改善方式：</strong><br>
      1. 上課保持專注<br>
      2. 認真完成筆記、作業<br>
      3. 每天規劃在家複習時間
    </p>`;
  }
  if (execRate < 0.85) {
    notes += `<p><strong>執行率不佳（小於85%）改善方式：</strong><br>
      1. 要求計算速度、精確性<br>
      2. 做好考試時間分配<br>
      3. 保持良好健康狀況與穩定心態
    </p>`;
  }

  document.getElementById('result').innerHTML = notes;
}
</script>
</body>
